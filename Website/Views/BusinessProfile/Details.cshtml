@model Website.Models.BusinessProfile

@{
    ViewBag.Title = "Details";
}

<div class="main-container-wrap">
    <h2>@ViewBag.Title</h2>

    <div>
        <h4>BusinessProfile</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BusinessName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BusinessName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Industry.IndustryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Industry.IndustryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ShortBusinessDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ShortBusinessDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LongBusinessDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LongBusinessDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StreetAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>

            @if (Model.Image != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    <img src="~/Content/BusinessImages/@Model.Image" alt="@Model.BusinessName" />
                </dd>
            }

            <dt>
                Location
            </dt>
            <dd>
                @{
                    var fullAddress = new System.Text.StringBuilder();

                    fullAddress.Append(Model.StreetAddress);
                    fullAddress.Append(",");
                    fullAddress.Append(Model.City);
                    fullAddress.Append(",");
                    fullAddress.Append(Model.State);
                    fullAddress.Append(",US");
                }
                <iframe width="600"
                        height="450"
                        frameborder="0"
                        style="border:0"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCttMNhWa1uq1jdmKjjyw0XWmw_J0eCqKA&q=@Url.Encode(fullAddress.ToString())"
                        Viewbag.Location
                        allowfullscreen
                        id="map"></iframe>
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.BusinessId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
